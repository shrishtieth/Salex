    contract Liquidity is  Ownable {
    using Counters for Counters.Counter;
    Counters.Counter public liquidityID;
    address public deadAddress;
    mapping(uint256 => LiquidityDetails) public idToLiquidity;
    mapping(uint256 => uint256) public saleToLiquidity;


    

    
    struct LiquidityDetails{
    
    address liquidityPair;
    address router;
    uint256 lpRecieved;
    uint256 lpLocked;
    uint256 duration;
    uint256 lockStartTime;
    uint256 lockEndTime;
    uint256 saleId;
    uint256 liquidityID;
    address owner;

    }

    

    constructor() {}

    function returnLiquidityId(uint256 id) public view returns(uint256 liquidityId ){
      liquidityId = saleToLiquidity[id];
      return(liquidityId);
    }

    function createEntry(uint256 id,
    address router,
    uint256 duration, address owner) public returns(uint256 liquidity){
        liquidityID.increment();
        uint256 liquidityId = liquidityID.current();
        idToLiquidity[liquidityId] = LiquidityDetails({

     liquidityPair: address(0),
     router: router,
     lpRecieved:0,
     lpLocked:0,
     duration:duration,
     lockStartTime:0,
     lockEndTime:0,
     saleId:id,
     liquidityID: liquidityId,
     owner:owner

        });
        saleToLiquidity[id] = liquidityId; 
        return(liquidityId);

    }

    function lockLiquidity(uint256 liqId, address pair, uint256 amount) public {
        idToLiquidity[liqId].liquidityPair = pair;
        idToLiquidity[liqId].lpLocked = amount;
        idToLiquidity[liqId].lockStartTime = block.timestamp;
        idToLiquidity[liqId].lockEndTime = block.timestamp + idToLiquidity[liqId].duration;
    }

    function unlockLiquidity(uint256 liqId) public{
        require(block.timestamp > idToLiquidity[liqId].lockEndTime,"Window Closed");
        IUniswapV2Pair(idToLiquidity[liqId].liquidityPair)
        .transfer(idToLiquidity[liqId].owner, idToLiquidity[liqId].lpLocked);
        idToLiquidity[liqId].lpRecieved = idToLiquidity[liqId].lpLocked;
        idToLiquidity[liqId].lpLocked = 0;
        

    }
   

}
